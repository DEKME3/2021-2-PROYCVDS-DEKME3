<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="edu.eci.cvds.dao.mybatis.mappers.OfferMapper">

    <insert parameterType="map" id="InsertOffer">
        INSERT INTO offers (name, category, description, creationdate, status, modificationdate)
        VALUES(
          #{oferta.name},
          #{categoryId},
          #{oferta.description},
          #{oferta.creationDate},
          #{oferta.status},
          #{oferta.modification});

    </insert>

    <update parameterType="map" id="ActualizarOffer">
        UPDATE Offers
        SET 
            status=#{status},
        WHERE id=#{id};
    </update>

    <resultMap type='offer' id='OfferResult'>
        <id property='id' column='id'/>
        <result property='name' column='name'/>
        <result property="description" column="description"/>
        <result property="creationDate" column="creationDate"/>
        <result property="status" column="status"/>
        <result property="modificationDate" column="modificationDate"/>
        <association property='category' javaType = 'Category'></association>
    </resultMap>
          	
</mapper>